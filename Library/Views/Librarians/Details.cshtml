@{
  Layout = "_Layout";
}

@model Library.Models.Librarian

<h1>@Html.DisplayFor(model => model.LibrarianName)'s Details</h1>

<table class ="table table-borderd table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Librarian Name
            </th>
        </tr>
    </thead>
    <tbody>
            <tr class="table table-hover table-dark">
                <td width 10%>
                    <h4>@Html.DisplayFor(model => model.LibrarianId)</h4>
                </td>
                <td width 50%>
                    <h4>@Html.DisplayFor(model => model.LibrarianName)</h4>
                </td>
                <td width 50%>
                    @Html.ActionLink("Edit Librarian", "Edit", new { id = Model.LibrarianId }, new { @class = "btn btn-outline-info" })
                </td>
                <td width 50%>
                    @Html.ActionLink("Delete Librarian", "Delete", new { id = Model.LibrarianId }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
    </tbody>
</table>

@Html.ActionLink("Back to Librarians", "Index", new { id = Model.LibrarianId }, new { @class = "btn btn-outline-info" })
