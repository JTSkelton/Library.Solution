@{
  Layout = "_Layout";
}

@using Library.Models;
<br>
<h1>Authors</h1>

<form asp-controller="Authors" asp-action="Index">
    <p>
        Search Authors: <input type="text" name="SearchString" />
        <input type="submit" value="Search" class="btn btn-outline-success"/>
    </p>
</form>

@if (@Model.Count == 0)
{
  <h3>No authors have been added yet!</h3>
} 


  @foreach(Author author in Model)
  {
    <h3>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</h3>
  }

<br>
<button type="button" class="btn btn-outline-success">@Html.ActionLink("Add new author", "Create")</button>
<button type="button" class="btn btn-outline-warning">@Html.ActionLink("Home", "Index", "Home")</button>