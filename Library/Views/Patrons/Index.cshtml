
@{
  Layout = "_Layout";
}

@using Library.Models;
&nbsp;
<h1>Library Patrons</h1>

@if (@Model.Count == 0)
{
  <h3>No library patrons have been added yet!</h3>
} 

  @if (User.Identity.IsAuthenticated)
  {
    @foreach(Patron patron in Model)
    {
      <h3>@Html.ActionLink($"{patron.PatronName}", "Details", new { id = patron.PatronId })</h3>
    }
  }

<br />

<button type="button" class="btn btn-outline-success">@Html.ActionLink("Add new patron", "Create")</button>
<button type="button" class="btn btn-outline-warning">@Html.ActionLink("Home", "Index", "Home")</button>
